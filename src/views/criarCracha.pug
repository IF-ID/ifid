template#criar-cracha-template
  #overlay.scroll
    .container.h-100
      .d-flex.flex-column.align-items-center.h-100
        form.card.rounded-5.p-5.w-75.my-auto
          .d-flex.flex-column.align-items-center.gap-3.position-relative
            button.btn-close.position-absolute.top-0.end-0.fs-5.translate-middle(onclick='hidePopup()' type='button')
            img.mb-3(src='assets/images/logo2.png', style='height: 5em;', alt='Logo')
            h5 Criando o Crachá
            .align-self-start
              h6 Tamanho
              p Padrão (7cm x 10cm)

            #nome.w-100
              input.input.form-control.form-control-lg.px-5.py-3(type='text', maxLength=45, placeholder='Informe o nome do aluno', oninput='validateNome("#nome")')
              small.error.text-danger
            #matricula.w-100
              input.input.form-control.form-control-lg.px-5.py-3(type='text', placeholder='Informe a matrícula do aluno', oninput='validateMatricula("#matricula")')
              small.error.text-danger
            #curso.w-100
              select.input.form-select.form-select-lg.px-5.py-3(onchange='validateCurso("#curso")')
                option(value='', selected='', hidden='') Selecione o curso do aluno

                each curso in cursos
                  option(value=curso.id_curso)= curso.nome_curso
              small.error.text-danger

            button.submit.btn.btn-primary.px-5.py-3(type='button', onclick='validateCard(criarCard)') Criar
